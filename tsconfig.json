{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "rootDir": "src",               // because everything is now at the root
      "outDir": "./dist",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "typeRoots": ["./src/types", "./node_modules/@types"],
    },
    "include": ["**/*.ts"]
  }
  